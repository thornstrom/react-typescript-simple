{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    } 
  }
  
